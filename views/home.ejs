<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <style>
    .fa {
      font-size: 25px;
      cursor: pointer;
      user-select: none;
    }

    .fa:hover {
      color: darkblue;
    }
  </style>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="home"
            >Home <span class="sr-only">(current)</span></a
          >
          <a class="nav-item nav-link" href="create-post">Add Post</a>
          <a class="nav-item nav-link" href="">Edit</a>
          <a class="nav-item nav-link disabled" href="">MyProfile</a>
        </div>
      </div>
    </nav>
    <div class="flex-wrap pt-5 px-5">
      <div class="row">
        <% posts.forEach(function(post){ %>
        <a href="/view/view-post/<%= post._id%>">
          <div class="col-md-4 pt-5">
            <div class="card" style="width: 18rem">
              <img
                class="card-img-top"
                src="/uploads/<%= post.image%>"
                alt="Card image cap"
                width="300" height="250"
              />
              <div class="card-body" style="width: 18rem;">
                <p class="card-text"><%= post.title %></p>
                <p class="card-text"><%= post.description %></p>
                <div>
                  <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i>
                </div>
              </div>
            </div>
          </div>
        </a>
        <%})%>
      </div>
    </div>
    <script>
      function myFunction(x) {
        x.classList.toggle("fa-thumbs-down");
      }
    </script>
  </body>
</html>
